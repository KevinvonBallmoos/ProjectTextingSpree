<!-- Name of Xml File has to be the same as the name of the Dialogue Editor -->
<!-- 1 Chapter or Section. -->
<Chapter1>
	<!-- Root Node is the start. In the Editor mark the first Node as "RootNode" -->
	<RootNode>Let us start talking</RootNode>
	<!-- All choices -->
	<DialogueChoices>
		<!-- The Editor reads from top to bottom. Make sure to have the right sequence -->
		<Choice id="1">Choice 1</Choice>
		<Choice id="2">Choice 2</Choice>
		<Choice id="3">Choice 3</Choice>
		<Choice id="3">Choice 4</Choice>
	</DialogueChoices>
	<!-- All NPC Dialogue or Dialogue that isn't a choice -->
	<DialogueNPC>
		<!-- The Editor reads from top to bottom. Make sure to have the right sequence -->
		<Npc id="1">Talk 1</Npc>
		<Npc id="2">Talk 2</Npc>
		<Npc id="3">Talk 3</Npc>
		<Npc id="4">Talk 4</Npc>
	</DialogueNPC>
</Chapter1>
