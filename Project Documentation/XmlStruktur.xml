<!-- Name of Xml File has to be the same as the name of the Dialogue Editor -->
<!-- 1 Chapter or Part. -->
<StoryChapter1>
	<!-- Title node is only to display the current Title of the Chapter in the Game -->
	<Title>Part 1 Chapter 1</Title>
	<!-- All choice Nodes -->
	<DialogueChoices>
		<!-- The Editor reads from top to bottom. Make sure to have the right sequence -->
		<Choice id="1">Choice 1</Choice>
		<Choice id="2">Choice 2</Choice>
		<Choice id="3">Choice 3</Choice>
		<Choice id="3">Choice 4</Choice>
	</DialogueChoices>
	<!-- All Story Dialogue Nodes -->
	<DialogueStory>
		<!-- The Editor reads from top to bottom. Make sure to have the right sequence -->
		<!-- The first Node has the "isRootNode"-Attribute set to "True" -->
		<Node  id="1" isRootNode="True">Talk 1</Node >
		<Node  id="2" image="image.png">Talk 2</Node >
		<Node  id="3" isGameOver="True">Talk 3</Node >
		<Node  id="4" isEndOfChapter="True">Talk 4</Node >
		<!-- There are several more Attributes, displayed above in Node 2 to Node 4 -->
	</DialogueStory>
</StoryChapter1>

